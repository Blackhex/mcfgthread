include_mcfgthreaddir = ${includedir}/mcfgthread
include_mcfgthread_HEADERS =  \
  src/version.h  \
  %reldir%/fwd.h  \
  %reldir%/atomic.h  \
  %reldir%/win32.h  \
  %reldir%/clock.h  \
  %reldir%/mutex.h  \
  %reldir%/cond.h  \
  %reldir%/once.h  \
  %reldir%/thread.h  \
  %reldir%/cxa.h  \
  %reldir%/dtor_queue.h  \
  %reldir%/exit.h  \
  %reldir%/tls.h  \
  %reldir%/gthr_aux.h  \
  %reldir%/gthr.h  \
  ${NOTHING}

lib_LTLIBRARIES += lib/libmcfgthread.la
lib_libmcfgthread_la_SOURCES =  \
  %reldir%/version.h.in  \
  %reldir%/version.rc  \
  %reldir%/startup.c  \
  %reldir%/win32.c  \
  %reldir%/clock.c  \
  %reldir%/mutex.c  \
  %reldir%/cond.c  \
  %reldir%/once.c  \
  %reldir%/thread.c  \
  %reldir%/cxa.c  \
  %reldir%/dtor_queue.c  \
  %reldir%/exit.c  \
  %reldir%/tls.c  \
  %reldir%/gthr_aux.c  \
  %reldir%/gthr.c  \
  ${NOTHING}

lib_libmcfgthread_la_CFLAGS =  \
  ${AM_CFLAGS} -nostdlib -f{freestanding,unwind-tables}

lib_libmcfgthread_la_LIBADD =  \
  -lkernel32 -lntdll

lib_libmcfgthread_la_LDFLAGS =  \
  -Wl,--subsystem,windows:6.1,--export-all-symbols,--exclude-libs,ALL  \
  -Wl,--{exclude-symbols,entry},__MCF_dll_startup@@Z  \
  -Wl,--disable-{runtime-pseudo-reloc,auto-import,stdcall-fixup}  \
  -Wl,--enable-auto-image-base -Wc,-nostdlib -no-undefined  \
  -version-info @abi_major@:@abi_minor@
