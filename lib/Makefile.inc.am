BUILT_SOURCES +=  \
  %D%/libkernelbase_tiny.a  \
  %D%/libntdll_tiny.a  \
  ${NOTHING}

CLEANFILES +=  \
  %D%/libkernelbase_tiny.a  \
  %D%/libntdll_tiny.a  \
  ${NOTHING}

EXTRA_DIST +=  \
  %D%/fwd.hdef  \
  %D%/libkernelbase_tiny.cdef  \
  %D%/libntdll_tiny.cdef  \
  ${NOTHING}

.cdef.a:
	@mkdir -p %D%
	${AM_V_GEN}${CC} -W{all,extra,undef} -std=c99 -x c-header $< -P -E -o $@.def &&  \
	    ${DLLTOOL} ${AM_DLLTOOLFLAGS} ${DLLTOOLFLAGS} -k -d $@.def -l $@
	@rm -f $@.def
